{
  "compilerOptions": {
    "module": "ESNext",
    "target": "es5",
    "lib": ["es6", "dom", "es2017"],
    "allowJs": true,
    "outDir": "./public/js",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "removeComments": true
  },
  "exclude": ["node_modules", "public/js/**/*"]
}
